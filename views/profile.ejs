           <div class="d-flex mt-3 ms-3">
            <% user.products.forEach(function(pr){ %>
              <div class="card" style="width: 15rem;">
                <img style="width: 12rem;"  class="card-img-top embed-responsive-item" src="/images/uploads/productimages/<%=pr.pic[0] %>"alt="...">
