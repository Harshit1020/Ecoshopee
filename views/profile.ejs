                <input name="image" class="form-control" type="file" id="formFile">
              </div>
              <div class="mb-3">
                <label for="formFile" class="form-label">Upload Images</label>
                <input name="image" class="form-control" type="file" id="formFile">
              </div>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            <button type="submit" class="btn btn-primary">Create New Product</button>
          </div>
        </form>
        </div>
      </div>
    </div>
    <div class="mt-3" class="d-flex " class="container">
        <h1 class="px-5">Profile Page.</h1>
        <hr>
       <% if(verified){ %>
        <div style="width: 90%; margin-left: 50px;" class="d-flex justify-content-between align-items-center p-3 text-primary-dark bg-success border border-danger-subtle rounded-3">
          <h4 style="font-size: 11px; color: #fff;">Your profile Complete and Verifed<a style="color: #f3f3f3;"  href="/edit"></a></h4>
          <a style="color: #fff;" class="btn btn-success"  href="/verify">Edit Your Details</a>
        </div>
       <% } else {%>
        <div style="width: 90%; margin-left: 50px;" class="d-flex justify-content-between align-items-center p-3 text-primary-dark bg-danger border border-danger-subtle rounded-3">
          <h4 style="font-size: 11px; color: #fff;">Your profile is incomplete <a style="color: #f3f3f3;"  href="/verify">verify your account</a>to get complete access</h4>
          <a style="color: #fff;" class="btn btn-danger"  href="/verify">Verify Now</a>
        </div>
      <% } %>
          <div class="d-flex">
            <div class="mt-3" id="photo">
                <img src="https://images.unsplash.com/photo-1638643391904-9b551ba91eaa?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxzZWFyY2h8MTd8fDNkJTIwY2hhcmFjdGVyfGVufDB8fDB8fA%3D%3D&auto=format&fit=crop&w=600&q=60" alt="">
            </div>
            <div class="mt-3" id="text">
                <div>
                 <!-- changes    -->
                <h3 style="font-family:Aeonik Pro; margin-left: 30px;"><%=user.name%></h3>
                 <!-- changes    -->
                <small style="margin-bottom: -30px; color: rgba(208, 202, 202, 0.796); margin-left: 30px;">@<%=user.username%></small>
            </div>
             <!-- changes    -->
            <a style="text-decoration: none; color: #000; margin-left: 30px;" href="/edit">Edit Your Profile</a>
             <!-- changes    -->
            </div>
          </div>
           <!-- changes    -->
