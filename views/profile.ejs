            <a data-bs-toggle="modal" data-bs-target="#exampleModal" class="btn btn-primary" href="/create/product">+create new product</a>
            <a class="btn btn-danger" href="/edit/product/:id">!update old product</a>
            <a  class="btn btn-info" href="/product">show all product</a>
